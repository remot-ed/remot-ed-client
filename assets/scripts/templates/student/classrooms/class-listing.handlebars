{{#if classrooms}}

{{#each classrooms as |class|}}
  <section class="col-6 student-classroom box" data-id="{{class._id}}">
      <h2> {{class.classname}} </h2>
      <h4> {{class.subject}} </h4>
      <h4> Teacher Name </h4>
      <a data-id="{{class._id}}" class="stretched-link getstudentclass"></a>
  </section>
{{/each}}

{{/if}}

{{#unless classrooms}}
  <table class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th class="th th-title">Classrooms</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Oops! Looks like you don't have any classrooms yet. Why not make one?</td>
      </tr>
    </tbody>
  </table>
{{/unless}}
