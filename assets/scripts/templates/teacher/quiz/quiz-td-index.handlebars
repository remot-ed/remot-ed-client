{{#if quizzes}}
  <table class="table table-striped table-bordered survey-list" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th class="th th-title">Quizzes</th>
        <th class="th"></th>
        <th class="th"></th>
      </tr>
    </thead>
    <tbody>
      {{#each quizzes as |quiz|}}
        <section data-id="{{quiz._id}}">
          <tr>
            <td class="td-title col-6 single-quiz-link" data-id="{{quiz._id}}">{{quiz.title}}</td>
            <td class="td-title col-2">
              <button class="btn btn-danger delete-quiz" data-id="{{quiz._id}}">Delete</button>
            </td>
            <td>
              <svg class="bi bi-pencil-square edit-quiz-link" data-id="{{quiz._id}}" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path data-id="{{quiz._id}}"
                  d="M15.502 1.94a.5.5 0 010 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 01.707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 00-.121.196l-.805 2.414a.25.25 0 00.316.316l2.414-.805a.5.5 0 00.196-.12l6.813-6.814z" />
                <path data-id="{{quiz._id}}" fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 002.5 15h11a1.5 1.5 0 001.5-1.5v-6a.5.5 0 00-1 0v6a.5.5 0 01-.5.5h-11a.5.5 0 01-.5-.5v-11a.5.5 0 01.5-.5H9a.5.5 0 000-1H2.5A1.5 1.5 0 001 2.5v11z"
                  clip-rule="evenodd" />
              </svg>
            </td>
          </tr>
        </section>
      {{/each}}
      <!-- {{#unless quizzes}}
