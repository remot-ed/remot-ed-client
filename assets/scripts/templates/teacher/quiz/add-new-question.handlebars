<form id="add-new-question">
  <div class="form-group">
    <input type="text" autocomplete="off" class="form-control inputs question-input" name="question[title]" placeholder="Question Text" required>
    <br>
    <input type="text" autocomplete="off" class="form-control inputs answer-input" name="question[correctAnswer]" placeholder="Correct Answer" required>
    <input type="text" autocomplete="off" class="form-control inputs answer-input" name="question[answerTwo]" placeholder="Answer Two" required>
    <input type="text" autocomplete="off" class="form-control inputs answer-input" name="question[answerThree]" placeholder="Answer Three" required>
    <input type="text" autocomplete="off" class="form-control inputs answer-input" name="question[answerFour]" placeholder="Answer Four" required>
    <br>
    <!-- <input type="text" class="form-control inputs" name="question[quizOwner]" placeholder="Quiz ID" required> -->
    <button type="submit" class="btn primary-btn">Save Question</button>
  </div>
</form>
